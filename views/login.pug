doctype html
html(lang="pt-BR")
  head
    title Página de Login
    style.
      body { font-family: Arial, sans-serif; display: flex; justify-content: center; padding-top: 50px; }
      form { border: 1px solid #ccc; padding: 20px; border-radius: 8px; width: 300px; }
      div { margin-bottom: 15px; }
      label { display: block; margin-bottom: 5px; }
      input { width: 100%; padding: 8px; box-sizing: border-box; }
      button { width: 100%; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer; }
      button:hover { background-color: #0056b3; }
  body
    form(action="/login", method="POST")
      h2 Login

      if erro
        p(style="color: red; margin-bottom: 10px;") #{erro}

      div
        label(for="nome") Usuário
        input(type="text", id="nome", name="nome", required, autofocus)
      div
        label(for="senha") Senha
        input(type="password", id="senha", name="senha", required)
      
      div
          a(href="/cadastro", style="color: #007bff; text-decoration: none;") Cadastre-se
      
      button(type="submit") Entrar
      