extends app.pug
block titulo
    title Cliente #{client.nome}

block conteudo
    .card
        h5.card-header Detalhes do(a) cliente #{client.nome}
        .card-body
            p
                strong ID: 
                | #{client.id}
            p
                strong Name: 
                | #{client.nome}
            p
                strong Email: 
                | #{client.email}
            p
                strong Data de Criação: 
                | #{client.createdAt}  
            p
                strong Data de Atualização: 
                | #{client.updatedAt}
            a(href="/clients/").btn.btn-success Voltar para a lista 