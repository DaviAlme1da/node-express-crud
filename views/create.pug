extends app.pug

block titulo
  title Novo Cliente — ClientManager

block topbar-title
  span.topbar-title
    a(href="/home" style="color: var(--text-2); text-decoration: none;") Início
    span.topbar-sep  ›
    a(href="/clients" style="color: var(--text-2); text-decoration: none;") Clientes
    span.topbar-sep  ›
    strong Novo Cliente

block conteudo
  .page-header
    h1 Novo Cliente
    p Preencha os dados para cadastrar um novo cliente.

  .card(style="max-width: 520px;")
    .card-header
      span.card-header-dot
      | Informações do Cliente
    .card-body
      form(action="/clients/" method="post")
        .form-group
          label.form-label(for="nome") Nome
          input#nome.form-control(
            type="text"
            name="nome"
            value=""
            required
            placeholder="Digite o nome completo"
            autocomplete="off"
          )
        .form-group
          label.form-label(for="email") Email
          input#email.form-control(
            type="email"
            name="email"
            value=""
            required
            placeholder="Digite o endereço de email"
            autocomplete="off"
          )
        .form-footer
          a.btn.btn-ghost(href="/clients")
            svg(viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
              line(x1="19" y1="12" x2="5" y2="12")
              polyline(points="12 19 5 12 12 5")
            | Cancelar
          button.btn.btn-primary(type="submit")
            svg(viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
              path(d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2")
              circle(cx="8.5" cy="7" r="4")
              line(x1="20" y1="8" x2="20" y2="14")
              line(x1="23" y1="11" x2="17" y2="11")
            | Cadastrar Cliente
