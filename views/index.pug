extends app.pug

block titulo
  title Clientes — ClientManager

block topbar-title
  span.topbar-title
    a(href="/home" style="color: var(--text-2); text-decoration: none;") Início
    span.topbar-sep  ›
    strong Clientes

block conteudo
  .page-header
    h1 Clientes
    p Lista de todos os clientes cadastrados no sistema.

  .table-toolbar
    p.table-count
      | Total: 
      strong #{clients.length} clientes
    a.btn.btn-primary(href="/clients/create")
      svg(viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
        line(x1="12" y1="5" x2="12" y2="19")
        line(x1="5" y1="12" x2="19" y2="12")
      | Novo Cliente

  .table-wrap
    table
      thead
        tr
          th ID
          th Nome
          th Email
          th(style="text-align: right;") Ações
      tbody
        for client in clients
          tr
            td ##{client.id}
            td
              a.client-link(href=`/clients/${client.id}`) #{client.nome}
            td.email-cell #{client.email}
            td
              .actions-cell(style="justify-content: flex-end;")
                a.btn.btn-ghost.btn-sm(href=`/clients/${client.id}/edit`)
                  svg(viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
                    path(d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7")
                    path(d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z")
                  | Editar
                form(action=`/clients/${client.id}?_method=DELETE` method="POST" style="display:inline;")
                  button.btn.btn-danger.btn-sm(type="submit" onclick="return confirm('Tem certeza que deseja excluir este cliente?')")
                    svg(viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
                      polyline(points="3 6 5 6 21 6")
                      path(d="M19 6l-1 14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2L5 6")
                      path(d="M10 11v6")
                      path(d="M14 11v6")
                      path(d="M9 6V4a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v2")
                    | Excluir
